@model QuanLyKH

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h2>Thêm mới khách hàng</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CodeVietNam"></label>
        <input asp-for="CodeVietNam" class="form-control" />
        <span asp-validation-for="CodeVietNam" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CodeQuocte"></label>
        <input asp-for="CodeQuocte" class="form-control" />
        <span asp-validation-for="CodeQuocte" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Team"></label>
        <input asp-for="Team" class="form-control" />
        <span asp-validation-for="Team" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TenDuAn"></label>
        <input asp-for="TenDuAn" class="form-control" />
        <span asp-validation-for="TenDuAn" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="KhachHang"></label>
        <input asp-for="KhachHang" class="form-control" />
        <span asp-validation-for="KhachHang" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
</form>