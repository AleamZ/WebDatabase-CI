{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=sakila;User=root;Password=1234CharSet=utf8mb4;SslMode=none;",
    "Redis": "localhost:6379"
  },
  "AllowedHosts": "*",
  "PerformanceSettings": {
    "CacheExpiration": {
      "Short": "00:05:00",
      "Medium": "00:30:00",
      "Long": "02:00:00",
      "VeryLong": "24:00:00"
    },
    "ConnectionPool": {
      "MaxPoolSize": 50,
      "MinPoolSize": 10,
      "ConnectionTimeout": 30
    },
    "Compression": {
      "EnableBrotli": true,
      "EnableGzip": true,
      "MinimumCompressionSize": 1024
    },
    "Memory": {
      "CacheSizeLimit": 1024,
      "CompactionPercentage": 0.25,
      "ExpirationScanFrequency": "00:05:00"
    }
  },
  "Features": {
    "EnableCaching": true,
    "EnableCompression": true,
    "EnablePerformanceMonitoring": true,
    "EnableResponseCaching": true,
    "EnableOutputCaching": true
  },
  "Security": {
    "EnableHSTS": true,
    "EnableSecurityHeaders": true,
    "SessionTimeout": "00:20:00",
    "AntiforgeryEnabled": true
  },
  "Monitoring": {
    "EnableHealthChecks": true,
    "EnableMetrics": true,
    "MetricsRetentionDays": 7,
    "PerformanceThresholds": {
      "MaxMemoryUsageMB": 500,
      "MinCacheHitRatio": 80,
      "MaxResponseTimeMs": 2000
    }
  },
  "Database": {
    "QueryTimeout": 30,
    "EnableQueryOptimization": true,
    "EnableBulkOperations": true,
    "DefaultPageSize": 100,
    "MaxRecordsLimit": 10000
  },
  "HttpClient": {
    "TimeoutSeconds": 120,
    "RetryCount": 3,
    "RetryDelaySeconds": 2
  },
  "DataTable": {
    "DefaultPageSize": 30,
    "MaxPageSize": 100,
    "SearchDelayMs": 300,
    "ProcessingTimeout": 60000
  }
}