{
    "Logging": {
        "LogLevel": {
            "Default": "Warning",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.EntityFrameworkCore": "Warning"
        }
    },
    "ConnectionStrings": {
        "DefaultConnection": "Server=localhost;Database=sakila;User=root;Password=1234CharSet=utf8mb4;SslMode=none;",
        "Redis": "localhost:6379"
    },
    "AllowedHosts": "*",
    "PerformanceSettings": {
        "CacheExpiration": {
            "Short": "00:10:00",
            "Medium": "01:00:00",
            "Long": "04:00:00",
            "VeryLong": "24:00:00"
        },
        "ConnectionPool": {
            "MaxPoolSize": 100,
            "MinPoolSize": 20,
            "ConnectionTimeout": 60
        },
        "Compression": {
            "EnableBrotli": true,
            "EnableGzip": true,
            "MinimumCompressionSize": 512
        },
        "Memory": {
            "CacheSizeLimit": 2048,
            "CompactionPercentage": 0.25,
            "ExpirationScanFrequency": "00:10:00"
        }
    },
    "Features": {
        "EnableCaching": true,
        "EnableCompression": true,
        "EnablePerformanceMonitoring": true,
        "EnableResponseCaching": true,
        "EnableOutputCaching": true
    },
    "Security": {
        "EnableHSTS": true,
        "EnableSecurityHeaders": true,
        "SessionTimeout": "00:30:00",
        "AntiforgeryEnabled": true
    },
    "Monitoring": {
        "EnableHealthChecks": true,
        "EnableMetrics": true,
        "MetricsRetentionDays": 30,
        "PerformanceThresholds": {
            "MaxMemoryUsageMB": 1024,
            "MinCacheHitRatio": 85,
            "MaxResponseTimeMs": 1500
        }
    },
    "Database": {
        "QueryTimeout": 60,
        "EnableQueryOptimization": true,
        "EnableBulkOperations": true,
        "DefaultPageSize": 50,
        "MaxRecordsLimit": 50000
    },
    "HttpClient": {
        "TimeoutSeconds": 180,
        "RetryCount": 3,
        "RetryDelaySeconds": 5
    },
    "DataTable": {
        "DefaultPageSize": 25,
        "MaxPageSize": 100,
        "SearchDelayMs": 500,
        "ProcessingTimeout": 120000
    }
}